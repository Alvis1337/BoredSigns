            <!--android:textSize="40px" />-->

            <TextView
                android:id="@+id/temp_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100°F"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="35px" />
        </LinearLayout>

